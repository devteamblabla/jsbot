  "dependencies": {
    "body-parser": "^1.15.0",
    "dotenv": "^4.0.0",
    "express": "^4.17.3",
    "node-telegram-bot-api": "^0.30.0"
  },
  "devDependencies": {
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.3.0",
    "request": "^2.88.2"
  }
}
